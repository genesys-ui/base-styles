{
  "name": "@genesys-ui/base-styles",
  "version": "0.1.0",
  "description": "The official Genesys UI styles repository",
  "scripts": {
    "build:all": "npm run build:css && npm run build:uglify && npm run build:fonts && npm run build:scss",
    "build:css": "sass src/scss/styles.scss dist/css/styles.css",
    "build:uglify": "uglifycss dist/css/styles.css > dist/css/styles.min.css",
    "build:fonts": "cp -r src/fonts dist/fonts",
    "build:scss": "cp -r src/scss dist/scss",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:all",
    "release:ci": "release-it --ci",
    "release": "release-it --dry-run"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:genesys-ui/base-styles.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.4",
    "sass": "^1.90.0",
    "uglifycss": "^0.0.29"
  }
}
